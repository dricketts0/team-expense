<div class="container-fluid">
  <br><br>
    <h1>{{#if requisition}}Edit Expense Requisition {{else}} Add Expense Requisition{{/if}}</h1>
    <br><br>
    <form action="/submitReq" method="POST">
      <div>
        <div class="form-group row">
          <div class="form-group col-sm-2" align="center">
            <label for="inputEncumbered" class="col-form-label">Amount</label>
          </div>
          <div class="form-group col-sm-10" align="right">
            <input id="inputEncumbered" class="form-control" type="number" placeholder="0.00" min="0" step="0.01" name="encumbered" value="{{requisition.encumbered}}"/>
          </div>
        </div>
        <div class="form-group row">
              <div class="form-group col-sm-2" align="center">
                  <label for="inputDepart" class="col-form-label">Event Date</label>
              </div>
              <div class="form-group col-sm-4" align="left">
                  <input  id="inputDepart" class="form-control" type="date" name="departureDate" value="{{requisition.departureDate}}"/>
              </div>
              <div class="form-group col-sm-2" align="center">
                  <label for="inputDestination" class="col-form-label">Destination</label>
              </div>
              <div class="form-group col-sm-4" align="left">
                  <input id="inputDestination" class="form-control" type="text" name="destination" value="{{requisition.destination}}"/>
              </div> 
        </div>
        <div class="form-group row">
              <div class="form-group col-sm-2" align="center">
                  <label for="inputReturn" class="col-form-label">End Date</label>
              </div>
              <div class="form-group col-sm-4" align="left">
                  <input  id="inputReturn" class="form-control" type="date" name="returnDate" value="{{requisition.returnDate}}"/>
              </div> 
              <div class="form-group col-sm-2" align="center">
                  <label for="inputDepartFrom" class="col-form-label">Departing From</label>
              </div>
              <div class="form-group col-sm-4" align="left">
                  <input  id="inputDepartFrom" class="form-control" type="text" name="departLocation" value="{{requisition.departLocation}}"/>
              </div>
            
        </div>
        <div class="form-group row">
          <div class="form-group col-sm-2" align="center">
            <label for="inputPurpose" class="col-form-label">Purpose</label>
          </div>
          <div class="form-group col-sm-10" align="right">
            <input id="inputPurpose" class="form-control" type="text" name="purpose" value="{{requisition.purpose}}"/>
          </div>
        </div>
        <div class="form-group row">
           <div class="form-group col-sm-2" align="center">
              <label for="inputObjectives" class="col-form-label">Objectives </label>
            </div>
          <div class="form-group col-sm-10" align="right">
            <textarea id="inputObjectives" class="form-control" type="text" rows="5" id="inputObjectives" name="objectives" value="{{requisition.objectives}}">{{requisition.objectives}}</textarea>
          </div>
        </div>
        <input type="hidden" name="id" value="{{requisition.id}}"/>
        <input type="hidden" name="totalSpent" value="{{requisition.totalSpent}}"/>
        <input type="hidden" name="balance" value="{{requisition.balance}}"/> 
        <br><br>
        <button type="submit" class="float-right">Submit</button>
      </div>
    </form>     
     
      
      
      
